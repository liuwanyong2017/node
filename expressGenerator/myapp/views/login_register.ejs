<% include header.ejs %>

<form action="<%= '/' + path %>" method="post" class="m-5 " style="width:40em;">
    <nav class="text-center">
        <a href="/login"
           class="<%= path === 'login' ? 'btn-secondary':'' %> btn btn-primary m-3 " role="button" >登录</a>
        <a href="/register"
           class=" <%= path === 'register' ? 'btn-secondary':''  %>  btn btn-primary m-3" role="button">注册</a>
    </nav>
    <div class="form-group row">
        <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">用户名</label>
        <div class="col-sm-10">
            <input type="text" class="form-control form-control-sm" name="name" id="colFormLabelSm" placeholder="请输入用户名"  required>
        </div>

    </div>
    <div class="form-group row">
        <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">密码</label>
        <div class="col-sm-10">
            <input type="password" class="form-control form-control-sm" name="password" id="colFormLabelSm" placeholder="请输入密码"  required>
        </div>
    </div>
    <div class="form-group ">
        <input type="submit" class=" btn btn-danger btn-sm float-right"  value="<%= path === 'login' ? '登录':'注册' %>">
    </div>
</form>

<% include footer.ejs %>