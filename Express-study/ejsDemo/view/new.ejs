<% include header.ejs%>
<div class="container   mt-5">
    <h4 class="text-center text-danger">请写下您的留言</h4>
    <form action="" method="post" role="form">
        <div class="form-group">
            <label for="title">留言的标题:</label>
            <input type="text" class="form-control" id="title"
                   placeholder="请输入标题" name="title" required>
        </div>
        <div class="form-group">
            <label for="content">留言的内容:</label>
            <textarea class="form-control" rows="5" id="content"
                      placeholder="请输入内容" name="content" required ></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="提交留言" class="btn btn-danger btn-primary float-right">
        </div>
    </form>
</div>
<% include footer.ejs%>

